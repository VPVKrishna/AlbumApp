<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:padding="5dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_choose_item_frame"
        android:layout_width="300dp"
        android:src="@drawable/aframe_one"
        android:scaleType="fitXY"
        android:layout_height="160dp" />

    <TextView
        android:id="@+id/tv_choose_item_name"
        android:layout_width="match_parent"
        android:text="Frame"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/iv_choose_item_frame"
        android:layout_alignRight="@+id/iv_choose_item_frame"
        android:layout_alignLeft="@+id/iv_choose_item_frame"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:background="#88000000"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

</RelativeLayout>