<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    
    <style name="et_sign_up">
        <item name="android:paddingLeft">@dimen/login_et_left_pad</item>
        <item name="android:paddingRight">@dimen/login_et_right_pad</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="et_sign_up.registration">
        <item name="android:background">@drawable/et_bg</item>
    </style>
</resources>
